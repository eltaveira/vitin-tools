{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"files": {
		"ignoreUnknown": true,
		"include": ["**/*/*.*"],
		"ignore": ["node_modules", "coverage", "dist", "html"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": ["tsconfig.json", "devcontainer.json"]
	},
	"linter": {
		"enabled": true,
		"ignore": [],
		"rules": {
			"recommended": false,
			"all": true,
			"performance": {
				"all": true
			},
			"a11y": {
				"all": true
			},
			"complexity": {
				"all": true
			},
			"correctness": {
				"all": true,
				"noUnusedImports": "error",
				"noNodejsModules": "off"
			},
			"nursery": {
				"all": true,
				"noUndeclaredDependencies": "off",
				"noConsole": "off"
			},
			"security": {
				"all": true
			},
			"style": {
				"all": true,
				"useFilenamingConvention": "error",
				"useNamingConvention": "error",
				"noDefaultExport": "error"
			},
			"suspicious": {
				"all": true,
				"noConsoleLog": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"indentWidth": 2,
			"trailingCommas": "none",
			"quoteProperties": "asNeeded",
			"attributePosition": "auto",
			"bracketSpacing": true,
			"jsxQuoteStyle": "single",
			"indentStyle": "space",
			"lineEnding": "lf",
			"lineWidth": 80,
			"bracketSameLine": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"trailingCommas": "none",
			"lineEnding": "lf",
			"indentWidth": 2,
			"lineWidth": 80
		},
		"parser": {
			"allowTrailingCommas": false,
			"allowComments": true
		}
	}
}
